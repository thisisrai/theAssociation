<h1>Edit page for <%= @player.first_name %> <%= @player.last_name %></h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <p><%= err %></p>
  <% end %>
<% end %>

<form action="/players/<%= @player.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>
    <label>First Name:</label>
    <input type="text" name="player[first_name]" value="<%= @player.first_name %>">
  </p>
  <p>
    <label>Last Name:</label>
    <input type="text" name="player[last_name]" value="<%= @player.last_name %>">
  </p>
  <input type="submit" value="Edit">
</form>

<%= link_to "Go Back", root_path%>