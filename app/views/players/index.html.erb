<h1>There are <%= @players.count %> players in our league</h1>

<table>
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td></td>
      <td>
        <a href="/players/<%= player.id %>">show</a> | 
        <a href="/players/<%= player.id %>/edit">edit</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="players/new">Create New Player</a>